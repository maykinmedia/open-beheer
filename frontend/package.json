{
  "name": "open-beheer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "commitlint": "commitlint --edit",
    "dev": "vite",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "preview": "vite preview",
    "prepare": "cd .. && husky frontend/.husky",
    "start": "npm run dev",
    "test": "vitest",
    "test:coverage": "vitest --coverage --watch=false",
    "update-types": "npx openapi-typescript ../backend/openbeheer-oas.yaml -o ./src/types/api.d.ts",
    "check-types": "npx openapi-typescript ../backend/openbeheer-oas.yaml -o ./src/types/api.d.ts --check",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@maykin-ui/admin-ui": "^2.0.0-alpha.31",
    "@maykin-ui/client-common": "^0.0.6",
    "react": "19.2",
    "react-dom": "19.2",
    "react-router": "^7.5.0"
  },
  "devDependencies": {
    "@ast-grep/cli": "^0.39.6",
    "@chromatic-com/storybook": "^3.2.6",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@maykinmedia/eslint-config": "^1.0.0",
    "@storybook/addon-coverage": "^1.0.5",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@storybook/test-runner": "^0.22.0",
    "@testing-library/react": "^16.3.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.1.3",
    "@vitest/coverage-istanbul": "^3.1.3",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-storybook": "^0.12.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.5.0",
    "msw-storybook-addon": "^2.0.4",
    "openapi-typescript": "^7.8.0",
    "playwright": "^1.51.1",
    "prettier": "^3.5.3",
    "storybook": "^8.6.12",
    "storybook-addon-remix-react-router": "^4.0.1",
    "typescript": "~5.7.2",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  },
  "lint-staged": {
    "*.{js,ts,md}": [
      "npm run lint:fix",
      "npx ast-grep scan"
    ]
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "overrides": {
    "storybook-addon-remix-react-router": {
      "react": "$react",
      "react-dom": "$react-dom"
    }
  }
}
